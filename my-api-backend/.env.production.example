APP_NAME=BusinessWebsite
APP_ENV=production
APP_KEY=base64:REPLACE_WITH_GENERATED_KEY
APP_DEBUG=false
APP_URL=https://your-backend.onrailway.app

# Database (Option A: Public Proxy)
DB_CONNECTION=mysql
DB_HOST=metro.proxy.rlwy.net
DB_PORT=35869
DB_DATABASE=railway
DB_USERNAME=root
DB_PASSWORD=REPLACE_WITH_RAILWAY_PASSWORD
# Or use a single URL (keep DB_CONNECTION=mysql):
# DATABASE_URL="mysql://root:REPLACE_WITH_RAILWAY_PASSWORD@metro.proxy.rlwy.net:35869/railway"

# CORS: set your frontend origin(s), comma-separated
CORS_ALLOWED_ORIGINS="https://your-frontend.example.com"

# Sanctum (SPA auth across domains)
# Add your Vercel/custom domains here so they receive stateful cookies
SANCTUM_STATEFUL_DOMAINS=your-frontend.vercel.app,your-custom-domain.com
# For cross-site cookies, you must use secure cookies and SameSite=None
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=none
# If using the same top-level domain across subdomains you can set:
# SESSION_DOMAIN=.your-domain.com

# Defaults (can be tuned)
LOG_CHANNEL=stack
LOG_LEVEL=info
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120
